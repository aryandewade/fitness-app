{
    "name": "fitness-tracker-root",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
        "build": "npm run build --workspaces",
        "lint": "npm run lint --workspaces",
        "postinstall": "cd server && npx prisma generate"
    },
    "devDependencies": {
        "concurrently": "^9.1.2",
        "prisma": "^6.19.2"
    }
}